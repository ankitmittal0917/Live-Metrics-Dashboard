{
  "name": "live-metrics-dashboard",
  "version": "1.0.0",
  "description": "Real-time monitoring dashboard for microservices metrics",
  "private": true,
  "scripts": {
    "install:all": "npm install --prefix backend && npm install --prefix frontend",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build": "npm run build:backend && npm run build:frontend",
    "docker:build": "docker build -t metrics-dashboard .",
    "docker:run": "docker run -p 3000:3000 -p 3001:3001 metrics-dashboard",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "metrics",
    "dashboard",
    "monitoring",
    "real-time",
    "typescript"
  ],
  "author": "Ankit Mittal",
  "license": "MIT"
}

